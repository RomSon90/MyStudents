<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- View background color -->
    <solid
        android:color="@color/lesson_default_background" >
    </solid>

    <!-- View border color and width -->
    <stroke
        android:width="1dp"
        android:color="@color/light_gray" >
    </stroke>

    <!-- The radius makes the corners rounded -->
    <corners
        android:radius="10dp"   >
    </corners>

    <padding
        android:bottom="@dimen/expandable_border_padding"
        android:left="@dimen/expandable_border_padding"
        android:right="@dimen/expandable_border_padding"
        android:top="@dimen/expandable_border_padding"/>

</shape>